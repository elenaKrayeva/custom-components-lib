{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src", "src/types", "jest.setup.ts", "test-env.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/*.test.*"
  ]
}
